{% extends 'base.html.twig' %}

{% block title %}Genres{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<br>
<div class="text-center">
    <h1>Genres</h>
    <br><br>
    <table class="table table-striped table-dark">
    <thead>
        <tr>
        <th scope="col">#</th>
        <th scope="col">Naam</th>
        <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        {% for genre in genres %}
        <tr>
        <th scope="row">{{genre.id}}</th>
        <td>{{genre.name}}</td>
        <td><a href="library/{{genre.id}}" type="button" class="btn btn-info">Bekijken</a></td>
        </tr>
        {% endfor %}  
    </tbody>
    </table>
    <td><a href="/library/upload/genre" type="button" class="btn btn-success">Toevoegen</a></td>
</div>
{% endblock %}
